<%layout("/layouts/boilerplate")%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">

                <h3>
                    <%=listing.title%>
                </h3>
                <div class="card listing-card col">
                    <img src="<%=listing.image.url%>" alt="listing image " class="card-img-top show-image">
                </div>
                <ul>
                    <li>
                        <%=listing.title%>
                    </li>
                    <li>
                        <%=listing.description%>
                    </li>
                    <li>&#8377; <%=listing.price%></li>
                    <li>
                        <%=listing.location%>
                    </li>
                    <li>
                        <%=listing.country%>
                    </li>

                </ul>

                <div class="btns row-1 del-form">
                    <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn ">
                        Edit this listing
                    </a>

                    <br>
                    <form action="/listings/<%=listing._id%>?_method=DELETE" method="post" class="">
                        <button class="btn btn-dark offset-2 del-btn mb-4">Delete This Listing</button>

                    </form>
                </div>

                <hr>
                <div class="col-8 offset-3">
                    <h4>Leave A Review</h4>
                    <form action="/listings/<%=listing._id%>/reviews" method="post" class="mb-3 needs-validation"
                        novalidate>
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"
                                required>

                        </div>
                        <div class="mb-3">
                            <label for="comment" class="form-label">Comments</label>
                            <textarea name="review[comment]" id="comment" cols="30" rows="7" class="form-control"
                                required></textarea>
                            <div class="invalid-feedback">Please sumbit some comments for review</div>
                        </div>


                        <button class="btn btn-dark mb-3">Post Review</button>
                    </form>

                

                </div>
                



            </div>
            <hr><br><br>
            <p><b>All Review </b></p>
            <div class="row ml-4">
                <%for(review of listing.review){%>
                    <div class="card col-3 ms-5 mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Harshil dhoot</h5>
                            <p class="card-text">
                                <%=review.comment%>
                            </p>
                            <p class="card-text">
                                <%=review.rating%> <span> Star</span>
                            </p>
                        </div>
                        <form action="/listings/<%=listing._id%>/review/<%=review._id%>?_method=DELETE" method="post" class="mb-3">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                    </div>
                    <%}%>
            </div>
        </div>