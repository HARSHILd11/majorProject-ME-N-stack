<%layout("/layouts/boilerplate")%>
<style>
    form input{
        width: 100%;
    }
    #description{
        width: 100%;
    }
    
</style>
    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h1>Edit <%=listing.title%> Listing</h1>
                <form method="post" action="/listings/<%=listing._id%>?_method=PUT">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input type="text" value="<%=listing.title%>" name="title">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label><br>
                        <textarea name="description" id="description"><%=listing.description%></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-lable">Image URL</label>
                        <input type="text" name="image" value="<%=listing.image.url%>">
                    </div>



                    <div class="mb-3">
                        <label for="price" class="form-lable">Price</label>
                        <input type="number" name="price" value="<%=listing.price%>">
                    </div>


                    <div class="mb-3">
                        <label for="country" class="form-lable">Country</label>
                        <input type="text" name="country " value="<%=listing.country%>">
                    </div>


                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <input type="text " name="location" value="<%=listing.location%>">
                    </div>



                    <button>Edit</button>
                </form>
            </div>
        </div>
    </body>