<%layout("/layouts/boilerplate")%>


    <div class="row">
        <h1>Login</h1>
        <div class="col-6 offset-3">

            <form action="/login" method="post" class="needs-validation" novalidate >

                <div class="mb-3">
                    <label for="username" class="form-lable" >username</label>
                    <input type="text" placeholder="" name="username" class="form-control" id="username" >
                    <div class="valid-feedback">Looks Good!</div>
                </div>

      

                <div class="mb-3">
                    <label for="password" class="form-lable">Password</label>
                    <input type="password" placeholder="" name="password" class="form-control" id="password" required>
                    
                </div>
                <button class="btn btn-success">Login</button>
                
            </form>
            <span>Create an account  <a class="nav-link btn-success" href="/signup">SignUp</a></span>
        </div>
    </div>